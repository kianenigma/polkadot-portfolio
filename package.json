		"@types/currency-formatter": "^1.5.1",
		"@types/node": "^16.11.6",
		"@types/yargs": "^17.0.5",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"eslint": "^8.2.0",
		"nodemon": "^2.0.14",
		"npm-check-updates": "12.0.0",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "4.4.4"
	},
	"dependencies": {
		"@polkadot/api": "6.6.1",
